# Huawei Cloud Credentials
HUAWEICLOUD_SDK_AK="YOUR_HUAWEICLOUD_SDK_AK"
HUAWEICLOUD_SDK_SK="YOUR_HUAWEICLOUD_SDK_SK"

# Resource ID to monitor
FREE_RESOURCE_IDS="YOUR_FREE_RESOURCE_IDS"

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"
TELEGRAM_CHAT_ID="YOUR_TELEGRAM_CHAT_ID"

# Traffic Thresholds (in GB)
# LEVEL 1: Below this value -> Shutdown procedure
THRESHOLD_LEVEL_1=200
# LEVEL 2: Between 1 and 2 -> Notify every run (1-hour interval)
THRESHOLD_LEVEL_2=300
# LEVEL 3: Between 2 and 3 -> Notify every run (4-hour interval), but alert only once every 24 hours
THRESHOLD_LEVEL_3=500
# LEVEL 0: Above level 3 -> Notify every 24 hours (4-hour run interval)

# Server Name
SERVER_NAME="My Server Name"

# Debug Mode
# Set to "True" to bypass time interval checks for testing
DEBUG_MODE="False"